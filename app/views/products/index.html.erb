<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Image url</th>
      <th>Stock</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= image_tag product.image_url, width: 100 %></td>
        <td><%= product.stock %></td>
        <td><%= link_to 'Adicionar ao carrinho', add_to_cart_product_path(product) %></td>
        <td><%= link_to 'Comprar', checkout_product_path(product) %></td>
        <!-- <td><%# link_to 'Show', product %></td> -->
        <td><%= link_to 'Editar', edit_product_path(product) %></td>
        <td><%= link_to 'Deletar', product, method: :delete, data: { confirm: 'VocÃª tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

